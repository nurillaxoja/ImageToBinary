<Window x:Class="ConvertBinary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertBinary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imageOriginal" Grid.Row="0" Grid.Column="0" Stretch="Fill" />
        <Image x:Name="imageBinary" Grid.Row="0" Grid.Column="1"  Stretch="Fill" />
        <Button x:Name="btnLoadImage" Grid.Column="0" Grid.Row="1" Content="Image" FontSize="24" Click="btnLoadImage_Click"/>
        <Label Grid.Row="1" Grid.Column="1"  Content="Result" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
